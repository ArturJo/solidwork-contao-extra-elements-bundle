{# Variables: title (HTML), subtitle (HTML), subtitle_position ('above'|'below'), headline_level ('h1'..'h6') #}
{% set allowed = ['h1','h2','h3','h4','h5','h6'] %}
{% set tag = headline_level in allowed ? headline_level : 'h2' %}
{% set isAbove = subtitle_position == 'above' %}

{% if isAbove %}
    <div class="headline-subline headline-subline--top">
        <span class="headline-subline--top-text">{{ subtitle|raw }}</span>
    </div>
{% endif %}

<{{ tag }} class="content-headline headline-title mb-2">
{{ title|raw }}
</{{ tag }}>

{% if not isAbove %}
    <div class="headline-subline headline-subline--bottom">
        <span class="headline-subline--bottom-text">{{ subtitle|raw }}</span>
    </div>
{% endif %}